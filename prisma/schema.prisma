// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Listing {
  id           String   @id @default(cuid())
  category     String   // STAY, TOUR, RESTAURANT
  title        String
  parish       String
  locationText String
  description  String
  rating       Float    @default(0)
  reviewsCount Int      @default(0)
  priceFrom    Int?
  images       String   // JSON array stored as string
  amenities    String   // JSON array stored as string
  rules        String?  // JSON array stored as string (for stays)
  included     String?  // JSON array stored as string (for tours/restaurants)
  lat          Float?
  lng          Float?
  featured     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  bookings  BookingRequest[]
  favorites Favorite[]
  reviews   Review[]
}

model BookingRequest {
  id              String   @id @default(cuid())
  listingId       String
  listing         Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  categorySnapshot String  // STAY, TOUR, RESTAURANT
  startDate       DateTime?
  endDate         DateTime?
  dateTime        DateTime?
  guests          Int
  name            String
  email           String
  phone           String
  notes           String?
  status          String   @default("NEW") // NEW, CONFIRMED, CANCELLED
  createdAt       DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  deviceId  String
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([deviceId, listingId])
}

model Review {
  id          String   @id @default(cuid())
  listingId   String
  listing     Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  authorName  String
  rating      Int      // 1-5
  comment     String
  createdAt   DateTime @default(now())
}
